extends layout

block body
  div(class="container")
    div(ng-controller='AppCtrl')
      h2 {{ $route.current.activetab}}
      hr
      ul(class="nav nav-tabs")
        li(role="presentation", ng-class="{active: $route.current.activetab == 'view1'}")
          a(href='view1') Sin resolver
        li(role="presentation", ng-class="{active: $route.current.activetab == 'view2'}")
          a(href='view2') Formulario
        li(role="Buscar", ng-class="{active: $route.current.activetab == 'search'}")
          a(href='search') Buscar Grams

      div(ng-view)

  script(src='js/lib/angular/angular.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  script(src='js/factories.js')