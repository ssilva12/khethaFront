//- PAGE TITLE
div(class="page-title")
    h2() Fusionar
        span(class="txt-grises", ng-bind="lista.cantidad")
//- END PAGE TITLE
//- PAGE CONTENT WRAPPER
div(class="page-content-wrap")
    //-INICIO
    div(class="row")
        div(class="col-md-12")
            div(class="panel panel-default")
                div(class="panel-body")
                    form(class="form-horizontal")
                        div(class="form-group")
                            span.col-md-3.col-xs-12.control-label Diccionario
                            div.col-md-6.col-xs-12
                                select(ng-model="metaRelationSearch", ng-options="x.name for x in metaFeatures", class="form-control")
                        div.form-group
                            span.col-md-3.col-xs-12.control-label Noun 1
                            div.col-md-6.col-xs-12
                                input(ng-disabled="metaRelationSearch == undefined", class="form-control",ng-focus="onFocus('firstNounVisible',1)",ng-blur="onBlur('firstNounVisible',1)", ng-model-options="{ debounce: 1000 }",ng-change="autocompletarInput(firstNoun.er,metaRelationSearch.dictionary,'dataNoun1','null')", ng-model="firstNoun.er")
                                ul(ng-show="{{ 'firstNounVisible' + 1 }}", class="list-group select-list", style="z-index: 10; position: absolute;")
                                    li(class="list-group-item",ng-mousedown="assignValue('firstNoun' ,persona)", ng-repeat="persona in dataNoun1"){{persona.er}}
                        div.form-group
                            span.col-md-3.col-xs-12.control-label Noun 2
                            div.col-md-6.col-xs-12
                                input(ng-disabled="metaRelationSearch == undefined", class="form-control",ng-focus="onFocus('NombreVisible',1)",ng-blur="onBlur('NombreVisible',1)", ng-model-options="{ debounce: 1000 }", ng-change="autocompletarInput(secondNoun.er,metaRelationSearch.dictionary,'dataNoun2','null')", ng-model="secondNoun.er")
                                ul(ng-show="{{ 'NombreVisible' + 1 }}", class="list-group select-list", style="z-index: 10; position: absolute;")
                                    li(class="list-group-item",ng-mousedown="assignValue('secondNoun' ,persona)", ng-repeat="persona in dataNoun2") {{persona.er}}
                        div(class="form-group")
                            div.col-md-1.col-md-offset-8
                                button(class="btn btn-primary mb-control",ng-click="fuseNouns(firstNoun,secondNoun)") Fusionar