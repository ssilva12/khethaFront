div(class="page-container page-navigation-top-fixed",ng-controller="AppCtrl")
  div(class="page-sidebar scroll")
    ul(class="x-navigation", active-tab="")
      li(class="xn-logo")
        a(href="", ng-click="Redirect('candidateslist')") KHETHA
        a(href="", class="x-navigation-control")
      li(class="xn-profile")
        a(href="", class="profile-mini")
          //-img(src="assets/images/users/user3.jpg")
          i(style="color: #FFFFFF", class="fa fa-2x fa-user-circle")
        div(class="profile")
          div(class="profile-image")
            //-img(src="assets/images/users/user3.jpg")
            i(style="color: #FFFFFF", class="fa fa-5x fa-user-circle")
          div(class="profile-data")
            div(class="profile-data-name", ng-bind="sesion.userName") 
            div(class="profile-data-title")
      li(ng-class="{'active' : activetab == 'vacancyList'}")
        a(href="",ng-click="Redirect('vacancyList')") 
          i(class="fa fa-briefcase", aria-hidden="true") 
          span(class="xn-text") &nbsp;{{ 'VACANCYS' | translate }}
      li(ng-class="{'active' : activeId == 'candidateList'}")
        a(href="",ng-click="Redirect('candidateslist')") 
          i(class="fa fa-users", aria-hidden="true") 
          span(class="xn-text") &nbsp;{{ 'CANDIDATES' | translate }}
      li(ng-class="{'active' : activeId == 'employerList'}")
        a(href="",ng-click="Redirect('employerList')") 
          i(class="glyphicon glyphicon-user", aria-hidden="true") 
          span(class="xn-text") &nbsp;{{ 'EMPLOYERS' | translate }}
      li(class="xn-openable", ng-show="sesion.role=='5' || sesion.role=='4' || sesion.role=='3'")
        a(href="")
          i(class="fa fa-wrench", aria-hidden="true") 
          span(class="xn-text") &nbsp;{{ 'FEATURE_ENGINEERING' | translate }}
        ul()
          li(ng-class="{'active' : activeId == 'synonyms'}")
            a(href="",ng-click="Redirect('synonyms')") 
              i(class="fa fa-copy", aria-hidden="true") 
              span(class="xn-title") &nbsp;{{ 'DICTIONARIES' | translate }}
          li(ng-class="{'active' : activeId == 'metaFeatures'}")
            a(href="",ng-click="Redirect('metaFeatures')") 
              i(class="fa fa-tag", aria-hidden="true") 
              span(class="xn-title") &nbsp;{{ 'METHAFEATURES' | translate }}
          li(ng-class="{'active' : activeId == 'unresolved'}")
            a(href="",ng-click="Redirect('unresolved')") 
              i(class="fa fa-exclamation-triangle", aria-hidden="true") 
              span(class="xn-title") &nbsp;{{ 'UNRESOLVED' | translate }}  
          li(ng-class="{'active' : activeId == 'vacancyFrequency'}")
            a(href="",ng-click="Redirect('vacancyFrequency')") 
              i(class="fa fa-th", aria-hidden="true") 
              span(class="xn-title") &nbsp;{{ 'FREQUENCY_MATRICES' | translate }}
          li(ng-class="{'active' : activeId == 'candidateMatching'}")
            a(href="",ng-click="Redirect('candidateMatching')") 
              i(class="fa fa-th", aria-hidden="true") 
              span(class="xn-title") &nbsp;{{ 'VACANCY_CHARACTERIZATION' | translate }}
          li(ng-class="{'active' : activeId == 'jobList'}")
            a(href="",ng-click="Redirect('jobList')") 
              i(class="fa fa-desktop", aria-hidden="true") 
              span(class="xn-title") &nbsp;{{ 'JOBS' | translate }}     
      li(class="xn-openable", ng-show="sesion.role == '5'")
        a(href="")
          i(class="fa fa-gears", aria-hidden="true") 
          span(class="xn-text") &nbsp;{{ 'CONFIGURATION_MAINTENANCE' | translate }}   
        ul()
          li(ng-class="{'active' : activeId == 'userList'}")
            a(href="",ng-click="Redirect('userList')") 
              i(class="fa fa-user", aria-hidden="true") 
              span(class="xn-title") &nbsp;{{ 'USERS' | translate }} 
          li(ng-class="{'active' : activeId == 'users'}")
            a(href="") 
              i(class="fa fa-cog", aria-hidden="true") 
              span(class="xn-title") &nbsp;{{ 'SYSTEM_PARAMETERS' | translate }} 
      li()  
        br()
        
  div(class="page-content")
    ul(class="x-navigation x-navigation-horizontal x-navigation-panel")
      li(class="xn-icon-button")
        a(class="x-navigation-minimize")
          span(class="fa fa-dedent")
      li(class="xn-search")
        form(role="form")
          input(type="text", name="search", placeholder="{{ 'SEARCH' | translate }}...") 
      li(class="xn-icon-button pull-right last")
        a(href="")
          span(class="fa fa-power-off")
        ul(class="xn-drop-left animated zoomIn")
          li()
            a(href="/") 
              span(class="fa fa-sign-out")
              span() {{ 'LOG_OFF' | translate }}
