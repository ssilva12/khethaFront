        a(href="")
          span(ng-show="Language.lang == 'es'", class="flag flag-es") 
          span(ng-show="Language.lang == 'en'", class="flag flag-en") 
        ul(class="xn-drop-left xn-drop-white animated zoomIn")
          li()
            a(href="", ng-click="changeLanguage('en')")
              span(class="flag flag-en")
              span() English
            a(href="", ng-click="changeLanguage('es')")
              span(class="flag flag-es")
              span() Espa√±ol
    //- START LOADING
    div(id="wait", ng-show="waitModal")
      div(class="page-sidebar page-sidebar-fixed scroll row", style="width:100%")
        div(class="progress", style="border-radius:0px !important;")
          div(class="progress-bar progress-bar-success progress-bar-striped active", role="progressbar", aria-valuenow="100", aria-valuemin="0", aria-valuemax="100", style="width:100%")
            span(ng-bind="waitModalMessage")
    //- START LOADING
    //- START BREADCRUMB
    ul(class="breadcrumb")
      li()
        a(href="") {{ 'HOME' | translate }}
      li()
        a(ng-bind="activeTitle | translate")
    //- END BREADCRUMB
    div(class="row")
      <div ui-view></div>
  //- END PAGE CONTAINER
  //- MESSAGE BOX
  div(class="message-box animated fadeIn", data-sound="alert", id="mb-signout")
    div(class="mb-container")
      div(class="mb-middle")
        div(class="mb-title")
          span(class="fa fa-sign-out")
          span()  Log 
          strong() Out
          span()  ?
        div(class="mb-content")
          p() Are you sure you want to log out?
          p() Press No if youwant to continue work. Press Yes to logout current user.
        div(class="mb-footer")
          div(class="pull-right")
            a(href="pages-login.html", class="btn btn-success btn-lg") Yes
            button(class="btn btn-default btn-lg mb-control-close") No
  div(class="message-box animated fadeIn", ng-class="{'open': Message.open,'message-box-success' : Message.type == 'success','message-box-default' : Message.type == 'confirm','message-box-danger' : Message.type == 'error','message-box-warning' : Message.type == 'warning','message-box-info' : Message.type == 'info'}")
    div(class="mb-container")
      div(class="mb-middle")
        div(class="mb-title")
          //-span(class="fa fa-check")
          span() {{Message.title | translate}}
        div(class="mb-content")
          p() {{Message.message | translate}}
        div(class="mb-footer")
          div(class="col-sm-8")
          div(class="col-sm-2")
            button(ng-show="Message.type == 'confirm'", class="btn btn-success btn-lg mb-control-close", ng-click="Message.open = false; Message.acept()") {{ Message.aceptText | translate}}
          div(class="col-sm-2")
            button(ng-show="Message.type == 'confirm'", class="btn btn-danger btn-lg pull-right mb-control-close", ng-click="Message.open = false; Message.cancel()") {{ Message.cancelText | translate}}
            button(ng-hide="Message.type == 'confirm'", class="btn btn-default btn-lg pull-right mb-control-close", ng-click="Message.open = false; Message.acept()") {{ 'CLOSE' | translate}}
  //- END MESSAGE BOX

