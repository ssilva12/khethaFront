div(class="login-container", style="height:100vh;")
    div(class="login-box animated fadeInDown") 
        div(class="login-logo")
        div(class="login-body")
            div(class="login-title")
                strong() Welcome
                span() , Please login
            form(class="form-horizontal")
                div(class="form-group")
                    div(class="col-md-12")
                        input(type="text", class="form-control", placeholder="Username", ng-model="user.userName")
                div(class="form-group")
                    div(class="col-md-12")
                        input(type="password", class="form-control", placeholder="Password", ng-model="user.password")
                div(class="form-group")
                    div(class="col-md-6")
                        a(href="", class="btn btn-link btn-block") Forgot your password?
                    div(class="col-md-6")
                        button(class="btn btn-info btn-block", ng-click="login()") Log In
        div(class="login-footer")  
            div(class="pull-left") &copy; 2017 AppName 
            div(class="pull-right")     
                a(href="") About  
                a(href="") Privacy
                a(href="") Contact Us